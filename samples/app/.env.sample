# DigiCred Wallet Environment Configuration
# Copy this file to .env and fill in your values

# Mediator Configuration
MEDIATOR_URL=https://your-mediator-url
MEDIATOR_USE_PUSH_NOTIFICATIONS=true

# WebRTC TURN Server Configuration
# Required for video calls to work behind NAT/firewalls
# Get these credentials from your TURN server provider (e.g., Twilio, Xirsys, or self-hosted coturn)
TURN_SERVER_URL=turn:your-turn-server:3478
TURN_SERVER_URL_TCP=turn:your-turn-server:3478?transport=tcp
TURN_SERVER_USERNAME=your-turn-username
TURN_SERVER_PASSWORD=your-turn-password
